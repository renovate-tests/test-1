{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "docker": {
    "pinDigests": true
  },
  "packageRules": [
    {
      "groupName": "docker digests",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["pin", "digest"]
    }
  ],
  "droneci": {
    "enabled": false
  }
}
